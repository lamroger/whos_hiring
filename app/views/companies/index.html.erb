<div class="container">
  <% if @companies %>
    <table class="table">
        <thead>
          <tr>
            <th>Company</th>
            <th>Website</th>
            <th>Description</th>
          </tr>
        </thead>
        <tbody>
          <% @companies.each do |company| %>
            <%= render  partial: 'company', locals: { company: company } %>
          <% end %>
        </tbody>
      </table>
    <% end %>
  </div>
</div>
